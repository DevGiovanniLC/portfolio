---
// Componente de partículas flotantes con efecto de red
interface Props {
	particleCount?: number;
	particleColor?: string;
	lineColor?: string;
	particleSize?: number;
	connectionDistance?: number;
	speed?: number;
}

const {
	particleCount = 80,
	particleColor = "rgba(255, 255, 255, 0.6)",
	lineColor = "rgba(255, 255, 255, 0.15)",
	particleSize = 2,
	connectionDistance = 150,
	speed = 0.5,
} = Astro.props;
---

<canvas id="particles-canvas"></canvas>

<script
	define:vars={{
		particleCount,
		particleColor,
		lineColor,
		particleSize,
		connectionDistance,
		speed,
	}}
>
	class Particle {
		constructor(canvas) {
			this.canvas = canvas;
			this.x = Math.random() * window.innerWidth;
			this.y = Math.random() * window.innerHeight;
			this.vx = (Math.random() - 0.5) * speed;
			this.vy = (Math.random() - 0.5) * speed;
			this.radius = particleSize;
		}

		update() {
			this.x += this.vx;
			this.y += this.vy;

			const maxWidth = window.innerWidth;
			const maxHeight = window.innerHeight;

			// Rebotar en los bordes
			if (this.x < 0 || this.x > maxWidth) this.vx *= -1;
			if (this.y < 0 || this.y > maxHeight) this.vy *= -1;

			// Mantener dentro del canvas
			this.x = Math.max(0, Math.min(maxWidth, this.x));
			this.y = Math.max(0, Math.min(maxHeight, this.y));
		}

		draw(ctx) {
			ctx.fillStyle = particleColor;
			ctx.beginPath();
			ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
			ctx.fill();
		}
	}

	class ParticleSystem {
		constructor() {
			this.canvas = document.getElementById("particles-canvas");
			this.ctx = this.canvas.getContext("2d");
			this.particles = [];
			this.animationId = null;

			this.resizeCanvas();
			this.init();
			this.setupResizeHandler();
			this.animate();
		}

		init() {
			this.particles = [];
			for (let i = 0; i < particleCount; i++) {
				this.particles.push(new Particle(this.canvas));
			}
		}

		resizeCanvas() {
			const dpr = window.devicePixelRatio || 1;
			const width = window.innerWidth;
			const height = window.innerHeight;
			
			this.canvas.width = width * dpr;
			this.canvas.height = height * dpr;
			this.canvas.style.width = `${width}px`;
			this.canvas.style.height = `${height}px`;
			this.ctx.scale(dpr, dpr);
		}

		connectParticles() {
			for (let i = 0; i < this.particles.length; i++) {
				for (let j = i + 1; j < this.particles.length; j++) {
					const dx = this.particles[i].x - this.particles[j].x;
					const dy = this.particles[i].y - this.particles[j].y;
					const distance = Math.sqrt(dx * dx + dy * dy);

					if (distance < connectionDistance) {
						const opacity = (1 - distance / connectionDistance) * 0.5;
						this.ctx.strokeStyle = lineColor.replace(
							/[\d.]+\)$/,
							`${opacity})`
						);
						this.ctx.lineWidth = 1;
						this.ctx.beginPath();
						this.ctx.moveTo(this.particles[i].x, this.particles[i].y);
						this.ctx.lineTo(this.particles[j].x, this.particles[j].y);
						this.ctx.stroke();
					}
				}
			}
		}

		animate() {
			this.ctx.clearRect(0, 0, this.canvas.width, this.canvas.height);

			// Actualizar y dibujar partículas
			this.particles.forEach((particle) => {
				particle.update();
				particle.draw(this.ctx);
			});

			// Conectar partículas cercanas
			this.connectParticles();

			this.animationId = requestAnimationFrame(() => this.animate());
		}

		setupResizeHandler() {
			let resizeTimeout;
			const handleResize = () => {
				clearTimeout(resizeTimeout);
				resizeTimeout = setTimeout(() => {
					this.resizeCanvas();
					this.init();
				}, 250);
			};
			window.addEventListener("resize", handleResize);
		}

		destroy() {
			if (this.animationId) {
				cancelAnimationFrame(this.animationId);
			}
			window.removeEventListener("resize", this.setupResizeHandler);
		}
	}

	// Inicializar cuando el DOM esté listo
	if (document.readyState === "loading") {
		document.addEventListener("DOMContentLoaded", () => {
			new ParticleSystem();
		});
	} else {
		new ParticleSystem();
	}
</script>

<style>
	#particles-canvas {
		position: fixed;
		top: 0;
		left: 0;
		z-index: 0;
		pointer-events: none;
		background: transparent;
	}
</style>
