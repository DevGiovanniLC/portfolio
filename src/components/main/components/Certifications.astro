---
import { Image } from "astro:assets";
import cert1 from "/public/certifications/udemy-javascript.png";
import cert2 from "/public/certifications/hackerrank-javascript.png";
import cert3 from "/public/certifications/hackerrank-python.png";
---

<section
	id="certifications"
	class="flex flex-col gap-10 text-primary justify-center items-center py-12 px-8 animated-section max-w-8/12 mx-auto"
>
	<h1
		class="text-title font-title font-extrabold bg-linear-to-b from-blue-400 to-purple-800 bg-clip-text text-transparent"
	>
		Certificaciones
	</h1>

	<div
		class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 w-full max-w-6xl"
	>
		<a
			href="https://udemy-certificate.s3.amazonaws.com/pdf/UC-ea8bb4dd-1b50-4a06-9cdb-64fbf74f95f5.pdf "
			target="_blank"
			rel="noopener noreferrer"
		>
			<article
				id="cert-1"
				class="certification-card flex flex-col gap-4 p-6 rounded-lg backdrop-blur-md border border-zinc-700/50"
			>
				<Image
					src={cert1}
					alt="Maestría en JavaScript​: Desde Principiante Hasta Experto"
					class="w-full h-full object-cover rounded-lg"
					width={600}
					height={400}
					loading="lazy"
                    quality={80}
				/>

				<div class="flex flex-col gap-2">
					<h3 class="text-lg font-bold text-zinc-100">
						Maestría en JavaScript​: Desde Principiante Hasta
						Experto
					</h3>
					<p class="text-sm text-zinc-400">Udemy • 2025</p>
					<p class="text-sm text-zinc-300 line-clamp-2"></p>
				</div>
			</article>
		</a>

		<a
			href="https://www.hackerrank.com/certificates/00f80e47222e"
			target="_blank"
			rel="noopener noreferrer"
		>
			<article
				id="cert-2"
				class="certification-card flex flex-col gap-4 p-6 rounded-lg backdrop-blur-md border border-zinc-700/50 h-full"
			>
				<Image
					src={cert2}
					alt="JavaScript Certificate"
					class="rounded-lg"
					width={600}
					height={400}
					loading="lazy"
                    quality={80}
				/>

				<div class="flex flex-col gap-2">
					<h3 class="text-lg font-bold text-zinc-100">
						JavaScript Certificate
					</h3>
					<p class="text-sm text-zinc-400">HackerRank • 2024</p>
					<p class="text-sm text-zinc-300 line-clamp-2"></p>
				</div>
			</article>
		</a>
		<a
			href="https://www.hackerrank.com/certificates/4f6e1a99f1c7"
			target="_blank"
			rel="noopener noreferrer"
		>
			<article
				id="cert-3"
				class="certification-card flex flex-col gap-4 p-6 rounded-lg backdrop-blur-md border border-zinc-700/50 h-full"
			>
				<Image
					src={cert3}
					alt="Python Certificate"
					class="rounded-lg"
					width={600}
					height={400}
					loading="lazy"
                    quality={80}
				/>

				<div class="flex flex-col gap-2">
					<h3 class="text-lg font-bold text-zinc-100">
						Python Certificate
					</h3>
					<p class="text-sm text-zinc-400">HackerRank • 2022</p>
					<p class="text-sm text-zinc-300 line-clamp-2"></p>
				</div>
			</article>
		</a>
	</div>
</section>

<style>
	#certifications {
		background: rgba(100, 1, 146, 0.165);
		border-radius: 18px;
		box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
		backdrop-filter: blur(6px);
		border: 2px solid #b700ff;
	}

	.certification-card {
		background: linear-gradient(
			180deg,
			rgba(145, 16, 185, 0.461) 0%,
			rgba(59, 130, 246, 0.05) 100%
		);
		transition: all 0.3s ease;
	}

	.certification-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 8px 24px rgba(129, 16, 185, 0.49);
	}

	@media screen and (max-width: 750px) {
		#certifications {
			max-width: 100%;
			padding: 4rem 3rem;
			border-radius: 0;
			border: 0;
			max-width: 100%;
			width: 100%;
			box-shadow: 0;
		}
	}
</style>
