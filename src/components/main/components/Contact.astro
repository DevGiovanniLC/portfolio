<style>
	#contact {
		background: rgba(128, 0, 102, 0.093);
		border:  2px solid rgba(213, 90, 188, 0.3);
	}

	.contact-card {
		background: linear-gradient(
			135deg,
			rgba(169, 85, 247, 0.246) 0%,
			rgba(236, 72, 153, 0.05) 100%
		);
		transition: all 0.3s ease;
		max-width: 200px;
	}

	.contact-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 8px 24px rgba(168, 85, 247, 0.2);
	}

	@media screen and (max-width: 750px) {
		#contact {
			padding: 4rem 0rem;
			border: 0;
			border-radius: 0;
			max-width: 100%;
			width: 100%;
			box-shadow: 0;
		}

		#contact .wrapper {
			gap: 0.5rem;
		}

		.contact-card {
			max-height: 110px;
			max-width: 180px;
		}
	}
</style>
