---
import AnimateAnchor from "../../../templates/AnimateAnchor.astro";
---

<div id="wrapper" class="flex flex-row flex-wrap mb-2 ml-6 gap-6 items-center">
	<img
		src="perfil.webp"
		alt="Giovanni León"
		class="w-45 h-45 rounded-full select-none border-2 border-[#46ad6f]"
	/>

	<div class="flex flex-col gap-4 justify-start items-baseline">
		<AnimateAnchor
			href="https://www.linkedin.com/in/giovanni-lc/"
			mainSpinColor="00629E"
			alternateSpinColor="6BC8FF"
			className="bg-sky-900 text-zinc-100 gap-2 px-3 py-2"
		>
			<img
				src="icons/linkedin-mark.svg"
				alt="Giovanni León LinkedIn"
				class="w-5 h-5"
			/>
			Disponible para trabajar
		</AnimateAnchor>

		<div class="flex flex-row flex-wrap gap-2">
			<AnimateAnchor
				href="https://github.com/DevGiovanniLC"
				mainSpinColor="A8A29E"
				alternateSpinColor="52525B"
				className="bg-zinc-400 text-zinc-100 gap-2 px-4 py-2"
			>
				<img
					src="icons/github-mark.svg"
					alt="Giovanni León GitHub"
					class="w-5 h-5"
				/>
				GitHub
			</AnimateAnchor>

			<AnimateAnchor
				href="https://www.hackerrank.com/profile/giovanni_lc"
				mainSpinColor="006301"
				alternateSpinColor="75FF76"
				className="bg-green-800 text-zinc-100 gap-2 px-4 py-2"
			>
				<img
					src="icons/hackerrank-mark.svg"
					alt="Giovanni León HackerRank"
					class="w-5 h-5"
				/>
				HackerRank
			</AnimateAnchor>

			<AnimateAnchor
				href="https://tryhackme.com/p/giovannilc.dev"
				mainSpinColor="F54927"
				alternateSpinColor="2B0800"
				className="bg-orange-900 text-zinc-100 gap-2 px-4 py-2"
			>
				<img
					src="icons/tryhackme-mark.svg"
					alt="Giovanni León Try Hack Me"
					class="w-5 h-5"
				/>
				Try Hack Me
			</AnimateAnchor>
		</div>
	</div>
</div>

<style>
	@media screen and (max-width: 1025px) {
		div {
			@apply items-center justify-center text-center;
            margin-left: 0rem;
		}
	}
</style>
