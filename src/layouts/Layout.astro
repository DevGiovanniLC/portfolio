		<meta http-equiv="Content-Language" content="es" />

		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="robots" content="index, follow" />

		<meta name="author" content="Giovanni León Corujo" />
		<meta
			name="description"
			content="Portfolio de Giovanni León Corujo - Ingeniero informático | Desarrollador Full Stack | QA Tester"
		/>
		<meta
			name="keywords"
			content="Portfolio, Giovanni León Corujo, Ingeniero informático, Desarrollador Full Stack, QA Tester, Busqueda de empleo"
		/>

		<meta property="og:title" content="Portfolio - Giovanni León Corujo" />
		<meta
			property="og:description"
			content="Ingeniero informático | Desarrollador Full Stack | QA Tester"
		/>
		<meta property="og:type" content="website" />
		<meta
			property="og:url"
			content="https://portfolio-giovanni-lc.vercel.app/"
		/>
		<meta
			property="og:image"
			content="https://portfolio-giovanni-lc.vercel.app/og-image.png"
		/>

		<meta name="generator" content={Astro.generator} />
        
		<meta
			name="google-site-verification"
			content="itrgX9vUqUC18uxxjWEHYd_m2igfZBaX_7z6Xo-tgdE"
		/>

		<link rel="icon" type="image/png" href="/favicon.png" />
		<title>Portfolio - Giovanni</title>
	</head>
	<Analytics />
	<SpeedInsights />
	<body>
		<FloatingParticles
			particleCount={60}
			particleColor="rgba(255, 184, 0, 0.6)"
			lineColor="rgba(100, 100, 200, 0.3)"
			particleSize={2.5}
			connectionDistance={100}
			speed={0.4}
		/>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		display: grid;
		margin: 0;
		padding: 0;
		width: 100%;
		min-height: 100vh;
		grid-template-rows: auto 1fr auto;
		background-image: linear-gradient(125deg, #1d1d1d 0%, #000000 80%);
		font-family: "Inter", sans-serif;
	}
</style>

<script>
	import Lenis from "lenis";

	const lenis = new Lenis({
		duration: 1.2,
		easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
		wheelMultiplier: 1,
		touchMultiplier: 2,
		smoothWheel: true,
	});

	function raf(time: number) {
		lenis.raf(time);
		requestAnimationFrame(raf);
	}

	requestAnimationFrame(raf);

	// Smooth scroll para enlaces ancla
	document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
		anchor.addEventListener("click", (e) => {
			e.preventDefault();
			const targetId = (
				e.currentTarget as HTMLAnchorElement
			).getAttribute("href");

			if (targetId) {
				const targetElement = document.querySelector(targetId);
				if (targetElement) {
					// Calcular distancia para ajustar duración
					const currentScroll = lenis.scroll;
					const targetScroll =
						targetElement.getBoundingClientRect().top +
						currentScroll -
						100;
					const distance = Math.abs(targetScroll - currentScroll);

					// Duración proporcional a la distancia (mínimo 1s, máximo 3s)
					const dynamicDuration = Math.min(
						Math.max(distance / 1000, 1),
						3,
					);

					lenis.scrollTo(targetElement as HTMLElement, {
						offset: -100,
						duration: dynamicDuration,
						easing: (t: number) => {
							// Ease-out exponencial - Desaceleración muy fuerte y homogénea
							return 1 - Math.pow(1 - t, 5);
						},
					});
				}
			}
		});
	});
</script>
