---
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>Portfolio - Giovanni</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		display: grid;
		margin: 0;
		padding: 0;
		width: 100%;
		min-height: 100vh;
		grid-template-rows: auto 1fr auto;
		background-image: radial-gradient(
				circle at 20% 50%,
				rgba(34, 34, 34, 0.652) 0%,
				transparent 50%
			),
			radial-gradient(
				circle at 80% 20%,
				rgba(29, 29, 29, 0.816) 0%,
				transparent 50%
			),
			radial-gradient(
				circle at 40% 80%,
				rgba(7, 7, 7, 0.717) 0%,
				transparent 50%
			),
			linear-gradient(135deg, #2c2c2c 0%, #101010 50%, #252525 100%);
		background-color: #1f1f1f;
		background-size: cover;
		background-position: center;
		background-attachment: fixed;
		backdrop-filter: blur(10px);
		font-family: "Inter", sans-serif;
	}
</style>

<script>
    import Lenis from "lenis";

    // Detectar si es móvil por ancho de pantalla
    const isMobile = window.innerWidth <= 750;

    // Solo inicializar Lenis si NO es móvil
    if (!isMobile) {
        const lenis = new Lenis({
            duration: 1.2,
            easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
            wheelMultiplier: 1,
            touchMultiplier: 2,
        });

        function raf(time: number) {
            lenis.raf(time);
            requestAnimationFrame(raf);
        }

        requestAnimationFrame(raf);
    }
</script>
