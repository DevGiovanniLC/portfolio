---
import { Image } from "astro:assets";
import AnimateAnchor from "../../templates/AnimateAnchor.astro";
---

<AnimateAnchor
	href="https://www.docker.com"
	mainSpinColor="2496ED"
	alternateSpinColor="1D63ED"
	className="tech-badge bg-blue-900 text-zinc-100 gap-1 px-2 py-1"
>
	<Image
		src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/docker/docker-original.svg"
		alt="Docker"
		class="w-4 h-4"
		width={16}
		height={16}
		loading="lazy"
	/>
	<span>Docker</span>
</AnimateAnchor>
